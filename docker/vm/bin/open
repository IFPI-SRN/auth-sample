#! /bin/bash

if [ -d "$1" ]; then
  echo "Cannot Open Folder only Text Files"
  exit 1
fi

dirpath=$(echo "$PWD" | sed  "s/\/root\///g")
if [ "$dirpath" == "/root" ]; then
    dirpath=""
else
    dirpath="${dirpath}"
fi

filepath="${dirpath}/$1"
pathencoded=$(echo -n $filepath | basenc --base64url)

hostname=$(uname -n)

url="https://ide.dannluciano.com.br/fs/file/open/${hostname}/${pathencoded}"

echo $url
curl $url 2> /dev/null > /dev/null
